@model IEnumerable<TestBus1.Models.ShortUrlModel>

<h2 class="mb-4">Список ссылок</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Длинный URL</th>
            <th>Сокращенный URL</th>
            <th>Дата создания</th>
            <th>Количество переходов</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OriginalUrl</td>
                <td>
                    <a href="/Url/Redirect/@item.ShortenedUrl" target="_blank">@item.ShortenedUrl</a>
                </td>
                <td>@item.CreatedDate.ToShortDateString()</td>
                <td>@item.ClickCount</td>
                <td>
                    <a href='@Url.Action("Edit", "Url", new { id = item.Id })' >Редактировать</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Url", new { id = item.Id })">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>

@Html.ActionLink("Создать новую ссылку", "Create", "Url", null, new { @class = "btn btn-primary" })



